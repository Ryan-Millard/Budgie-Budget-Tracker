<resources>
    <style name="CalcButtonGray">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint">#264653</item>
        <item name="android:textSize">16sp</item>
        <!-- Rounded corners without making it a full circle -->
        <item name="android:shapeAppearance">@style/RoundedButton</item>
    </style>

    <style name="CalcButtonDark">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint">#2A9D8F</item>
        <item name="android:textSize">16sp</item>
        <!-- Rounded corners -->
        <item name="android:shapeAppearance">@style/RoundedButton</item>
    </style>

    <style name="CalcButtonOrange">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint">#F4A261</item>
        <item name="android:textSize">16sp</item>
        <!-- Rounded corners -->
        <item name="android:shapeAppearance">@style/RoundedButton</item>
    </style>

    <!-- Define rounded corners style -->
    <style name="RoundedButton">
        <item name="android:cornerRadius">16dp</item> <!-- Adjust the radius as needed -->
    </style>
</resources>