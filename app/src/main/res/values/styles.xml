<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base calculator button style -->
    <style name="CalcButtonBase" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="CalcButtonGray">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint">#264653</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CalcButtonDark">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint">#2A9D8F</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CalcButtonOrange">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint">#F4A261</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
